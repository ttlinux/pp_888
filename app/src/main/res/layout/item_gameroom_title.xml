<?xml version="1.0" encoding="utf-8"?>
<com.a8android888.bocforandroid.view.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.a8android888.bocforandroid.view.MyLinearLayout
        android:layout_width="match_parent"
        android:id="@+id/itemlinelayout"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <com.a8android888.bocforandroid.view.MyRelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/itemlayout"
        android:background="@color/white"
        android:layout_height="50dip">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_alignParentBottom="true"
    android:background="@color/line"
    />

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_height="50dp"
        android:layout_marginLeft="10dip"
        android:padding="10dip"
        />
<View
    android:layout_width="1dp"
    android:layout_toRightOf="@id/img"
    android:id="@+id/line"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/line2"
    android:layout_height="wrap_content">

</View>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/line"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="sadadsad"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/xiala"
        android:layout_marginRight="20dip"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_alignParentTop="true"
        android:layout_below="@id/img"
        />
        <ImageView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:id="@+id/srcid" />
</com.a8android888.bocforandroid.view.MyRelativeLayout>

    </com.a8android888.bocforandroid.view.MyLinearLayout>
</com.a8android888.bocforandroid.view.MyRelativeLayout>