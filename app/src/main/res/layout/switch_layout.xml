<?xml version="1.0" encoding="utf-8"?>
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radiogroup"
    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radiu_gray_rangle"
        >

        <RadioButton
            android:id="@+id/rb1"
            android:button="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@drawable/textcolor"
            android:text="@string/modifyuserpassword"
            android:background="@drawable/switch_left_draw"
            android:checked="true"
            android:singleLine="true"
            />

        <RadioButton
            android:id="@+id/rb2"
            android:button="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_marginLeft="-1dip"
            android:padding="10dip"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@drawable/textcolor"
            android:text="@string/modifycashpassword"
            android:background="@drawable/switch_right_draw"
            />
    </RadioGroup>
