<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/layouta"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lotterytv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:padding="6dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text=""
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/radius_lotterycomit_order"
            android:id="@+id/toplayout"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:id="@+id/qs"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:focusable="false"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:textSize="13sp"
                android:id="@+id/time"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/kjlayout"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/kjxz"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="快捷下注金额："
            android:focusable="false"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="50sp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/comitedit2"
                android:background="@null"
                android:layout_height="wrap_content"
                android:maxLength="9"
                />
            <View
                android:layout_width="match_parent"
                android:background="@color/line2"
                android:layout_height="1dp"></View>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/item_radiu_white_righttop"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comitname"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:maxLines="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:padding="2dp"
                android:text=""
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="下注金额:" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50sp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/image"
                    android:layout_toRightOf="@+id/textView6"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/comitedit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="9"
                        android:padding="2dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line2"></View>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:padding="3dp"
                    android:src="@drawable/lotteryexit" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zuidi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textColor="@color/gray10"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textColor="@color/gray10"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
