<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userbagcolor"
    android:orientation="vertical">

    <include layout="@layout/app_toplayout_lottery"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <!--<com.a8android888.bocforandroid.view.MyScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!-->-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/comitlayout"
                android:orientation="vertical">


                <!--<include layout="@layout/activity_lottery_order_listview_head" />-->

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dip"
                    android:background="@color/userbagcolor"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"
                    android:fadingEdge="none"
                    android:listSelector="#00000000"></ListView>
            </LinearLayout>
        <!--</com.a8android888.bocforandroid.view.MyScrollView>-->

        <LinearLayout
            android:id="@+id/comitlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zhushu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:focusable="false"
                    android:text=""
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/zongje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:focusable="false"
                    android:text=""
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_lotterycomit"
                android:focusable="false"
                android:gravity="center"
                android:padding="7dp"
                android:text="确认投注"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
