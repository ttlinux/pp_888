<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/topview"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:background="@color/loess"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            />
        <!--<View-->
            <!--android:id="@+id/line"-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:visibility="gone"-->
            <!--android:layout_margin="5dp"-->
            <!--android:background="@color/white"-->
            <!--android:layout_toRightOf="@+id/back"-->
            <!--android:layout_centerVertical="true"-->
            <!--></View>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back"
            android:layout_marginLeft="20dip"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/re_chooser1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dip"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:id="@+id/title"
                android:padding="5dp"
                android:textSize="20dp"
                />
            <ImageView
                android:id="@+id/triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_alignBottom="@id/title"
                android:layout_toRightOf="@id/title"
                android:src="@drawable/compu_img_up"
                />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_chooser2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="25dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dip"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:id="@+id/title2"
                    android:padding="5dp"
                    android:textSize="20dp"
                    />
                <ImageView
                    android:id="@+id/triangle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_alignBottom="@id/title2"
                    android:layout_toRightOf="@id/title2"
                    android:src="@drawable/compu_img_up"
                    />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            >
            <ImageView
                android:id="@+id/imagetwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:src="@drawable/gouwuche"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:id="@+id/imageone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:src="@drawable/help"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
