<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:background="@color/lotteryfragmenttitle"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/comitlayout"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <RadioButton
            android:layout_width="match_parent"
            android:text="重置"
            android:layout_weight="1"
            android:id="@+id/reset"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:background="@drawable/radius_lotterycomit"
            android:button="@null"
            android:gravity="center"
            android:drawableLeft="@drawable/resetimg"
            android:layout_height="30dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:text="确认订单"
            android:layout_marginLeft="10dp"
            android:id="@+id/comit"
            android:drawableLeft="@drawable/lotterycomitimg"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/radius_lotterycomit"
            android:button="@null"
            android:textColor="@color/white"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>
