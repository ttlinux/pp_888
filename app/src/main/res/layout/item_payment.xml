<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TriangleView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1">

    <RelativeLayout
        android:id="@+id/fview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:background="@drawable/rangle_noradiu_backgroud"
        android:paddingBottom="5dip">

        <ImageView
            android:id="@+id/state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/firstview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/state_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@id/firstview"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:textColor="@color/gray4"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

        <LinearLayout
            android:id="@+id/secondview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/triangle"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:textColor="@color/gray5"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottomview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fview"
        android:background="@color/gray6">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="8dip"
            android:id="@+id/bottomview_child"
            android:background="@drawable/rangle_noradiu_backgroud_gray13"
            >


        <LinearLayout
            android:id="@+id/botview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <!--<ImageView-->
            <!--android:layout_width="1dip"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:layout_marginTop="10dip"-->
            <!--android:layout_marginBottom="10dip"-->
            <!--android:layout_marginLeft="15dip"-->
            <!--android:background="@color/gray4"-->
            <!--/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ptitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:text="@string/paytype"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/paydate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/gray8"
                    android:singleLine="true"
                    android:text="@string/paydate"
                    android:textSize="10sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ptitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:text="@string/paysuccesstime"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/commitdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray8"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>
            <ImageView
                android:id="@+id/lie"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
        </LinearLayout>


            <LinearLayout
                android:id="@+id/remark_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/botview"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remark_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray8"
                    android:layout_gravity="top"
                    android:padding="2dip"
                    android:text=""
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/remark_valuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray8"
                    android:layout_marginRight="10dip"
                    android:layout_gravity="top"
                    android:padding="2dip"
                    android:textSize="13sp" />

            </LinearLayout>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="20dip"
            android:layout_below="@+id/remark_layout"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ptitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray8"
                android:layout_gravity="center"
                android:padding="2dip"
                android:text="@string/state"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray8"
                android:layout_gravity="center"
                android:padding="2dip"
                android:singleLine="true"
                android:textSize="13sp" />

        </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dip"
            android:background="@drawable/showdow_gray" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_below="@id/bottomview_child"
             />
        <!-- android:background="@drawable/showdow_gray_second"-->
    </RelativeLayout>

</RelativeLayout>
