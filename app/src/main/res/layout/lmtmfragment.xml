            android:layout_width="match_parent"
            android:background="@drawable/comit_order_codebag"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1.3"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="类别"
        android:background="@color/lotteryfragmenttitle"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/gray5"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/gray5"
        android:layout_height="wrap_content">
    <RadioGroup
        android:layout_width="match_parent"
        android:weightSum="5"
        android:orientation="horizontal"
        android:paddingLeft="0.5dp"
        android:paddingRight="0.5dp"
        android:background="@drawable/comit_order_codebag"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="match_parent"
            style="@null"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/sanquanzhong"
            android:gravity="center"
            android:clickable="true"
            android:padding="5dp"
            android:text="三全中"
            android:background="@drawable/lottery_fragment_layout"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/sanzhonger"
            android:padding="5dp"
            style="@null"
            android:layout_marginLeft="1dp"
            android:button="@null"
            android:text="三中二"
            android:background="@drawable/lottery_fragment_layout"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            style="@null"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/erquanzhong"
