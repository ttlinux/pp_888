            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/lottery_fragment_layout"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            style="@null"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:id="@+id/erzhongte"
            android:button="@null"
            android:layout_marginLeft="1dp"
            android:text="二中特"
            android:background="@drawable/lottery_fragment_layout"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            style="@null"
            android:layout_weight="1"
            android:id="@+id/techun"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:text="特串"
            android:background="@drawable/lottery_fragment_layout"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <RadioGroup
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/comit_order_codebag"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="match_parent"
            style="@null"
            android:gravity="center"
            android:padding="5dp"
            android:clickable="true"
            android:layout_weight="1"
            android:id="@+id/fushi"
            android:layout_margin="0.5dp"
            android:button="@null"
            android:text="复式"
            android:background="@drawable/lottery_fragment_layout"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            style="@null"
            android:layout_weight="1"
            android:button="@null"
            android:layout_margin="0.5dp"
            android:id="@+id/dantuo"
            android:gravity="center"
            android:padding="5dp"
            android:text="胆拖"
            android:background="@drawable/lottery_fragment_layout"
            android:layout_height="wrap_content" />
    </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layoudan1"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:text="胆1"
                    android:background="@drawable/comit_order_codebag"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:hint="请选择"
                    android:id="@+id/danyi"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:background="@drawable/comit_order_codebag"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/layoudan2"
                android:visibility="gone"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:layout_weight="0.5"
                android:text="胆2"
                android:background="@drawable/comit_order_codebag"
