                android:background="@drawable/comit_order_codebag"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
        <com.a8android888.bocforandroid.view.MyGridView
            android:layout_width="match_parent"
            android:layout_below="@+id/lau"
            android:id="@+id/lsitview"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="-1dp"
            android:verticalSpacing="-1dp"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:numColumns="4" />

    </RelativeLayout>
        </com.a8android888.bocforandroid.view.MyScrollView>
        <include
            layout="@layout/lotterycomitlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/comitlayout">

        </include>
    </RelativeLayout>

</LinearLayout>
