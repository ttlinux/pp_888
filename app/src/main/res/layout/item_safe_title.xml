<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/itemlayout"
        android:background="@drawable/radiu_white_rangle_safe"
        android:padding="3dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_green"
            android:id="@+id/imageView2" />
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="登录时间:"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginStart="13dp" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray5"
            android:textSize="12sp"
            android:text=""
            android:layout_alignTop="@+id/title"
            android:layout_toEndOf="@+id/title" />
<View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:background="@color/line"
    android:layout_below="@+id/title"
    android:layout_margin="5dp"
    android:id="@+id/line"
    android:layout_alignStart="@+id/imageView2" />

        <TextView
            android:id="@+id/shebei1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="设备:"
            android:layout_below="@+id/line"
            android:layout_alignStart="@+id/line" />
        <TextView
            android:id="@+id/shebei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray5"
            android:textSize="12sp"
            android:text=""
            android:layout_alignTop="@+id/shebei1"
            android:layout_toEndOf="@+id/shebei1" />
        <!--<View-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/line"-->
            <!--android:id="@+id/line1"-->
            <!--android:layout_below="@+id/shebei1"-->
            <!--android:layout_margin="5dp"-->
            <!--android:layout_alignStart="@+id/imageView2" />-->


        <TextView
            android:id="@+id/ipa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:text="IP:"
            android:layout_below="@+id/shebei"
            android:layout_alignStart="@+id/shebei1" />
        <TextView
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray5"
            android:textSize="12sp"
            android:text=""
            android:layout_alignTop="@+id/ipa"
            android:layout_toEndOf="@+id/ipa" />
</RelativeLayout>
</RelativeLayout>